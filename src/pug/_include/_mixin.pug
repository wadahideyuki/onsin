//- ---------------------
        Mixin用pug
  -----------------------
include /_include/_var.pug

//- ----- メタ --------------------//
//- og
mixin og(prop, cont)
  meta(property='og:' + prop, content=cont)


//- ----- 読み込み --------------------//
//- css読み込み
mixin css(fileName)
  link(href=fileName, rel='stylesheet', type='text/css', media='all')
//- common内のcss読み込み
mixin cssCommon(fileName)
  link(href=cssPath + fileName, rel='stylesheet', type='text/css', media='all')
//- js読み込み
mixin js(fileName)
  script(src=fileName, type='text/javascript')
//- common内のjs読み込み
mixin jsCommon(fileName)
  script(src=jsPath + fileName, type='text/javascript')



//- ----- ページパーツ --------------------//
//- img
mixin img(fileName, alt, className)
  img(class=className, src=imgPath + fileName, alt=alt)
mixin pageImg(fileName, alt, className)
  img(class=className, src=pageImgPath + fileName, alt=alt)

//- picture
mixin pic(fileName, fileNameSp, alt, className)
  picture
    source(srcset=imgPath + fileNameSp media=spW)
    +img(fileName, alt, className)
mixin pagePic(fileName, fileNameSp, alt, className)
  picture
    source(srcset=pageImgPath + fileNameSp media=spW)
    +pageImg(fileName, alt, className)

//- figure
mixin fig(fileName, alt, className)
  figure(class=className)
    +img(fileName, alt)
mixin pageFig(fileName, alt, className)
  figure(class=className)
    +pageImg(fileName, alt)

//- ダミー
mixin imgDmy(fileName, alt, className)
  img(class=className, src="https://placehold.jp/" + fileName, alt=alt)
mixin picDmy(fileName, fileNameSp, alt, className)
  picture
    source(srcset="https://placehold.jp/" + fileNameSp media=spW)
    +imgDmy(fileName, alt, className)
mixin figDmy(fileName, alt, className)
  figure(class=className)
    +imgDmy(fileName, alt)


//- 動画
mixin mov(url)
  video(src=movPath + url, autoplay, muted, playsinline, loop)
mixin yt(url)
  iframe(src='https://www.youtube.com/embed/' + url + '?rel=0&wmode=transparent', allowfullscreen='', frameborder='0')

//- ttl
mixin ttl1(txt1, txt2)
  h2.u-ttlBox1
    small!= txt1
    span!= txt2

//- ボタン
mixin btn1(txt, href)
  a.u-btn1(href=href)&attributes(attributes)!= txt


